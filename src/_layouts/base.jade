//- Custom Configuration
block config
  //- Setup site's base URL to match the "baseUrl" key within `package.json`
  //- Otherwise default to relative pathing
  - var baseUrl = config.baseUrl || './'

doctype html
<html class='no-js' lang='en'>

head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  title  FE Test - Fastrack Group
  meta(name='description', content= 'A new Yeogurt application')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')

  // <resources>
  link(href="https://fonts.googleapis.com/css?family=Arvo|Lato:300" rel="stylesheet")
    
  block stylesheets
    link(rel='stylesheet', href= baseUrl + 'styles/main.css')

body
  <!--[if lt IE 11]>
  <p class='browsehappy'>You are using an <strong>outdated</strong> browser. Please <a href='http://browsehappy.com/'>upgrade your browser</a> to improve your experience.</p>
  <![endif]-->

  //- HEADER
  include ./_partials/header/header

  main.main
    block content

  //- Footer
  include ./_partials/footer/footer

  block scripts
    script(src= baseUrl + 'scripts/main.js')

</html>
